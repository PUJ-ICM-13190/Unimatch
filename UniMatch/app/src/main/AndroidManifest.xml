<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ajiaco.unimatch">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniMatch"
        tools:targetApi="31">

        <!-- SplashActivity es la actividad de inicio -->
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.UniMatch" />

        <!-- OnboardingActivity -->
        <activity
            android:name=".ui.OnboardingActivity"
            android:theme="@style/Theme.UniMatch"
            android:exported="true"/>

        <!-- SelectionActivity -->
        <activity
            android:name=".ui.SelectionActivity"
            android:exported="true" />

        <!-- LoginActivity -->
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" />

        <!-- RegisterActivity -->
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" />

        <!-- PasswordRecoveryActivity -->
        <activity
            android:name=".ui.PasswordRecoveryActivity"
            android:exported="true" />

        <!-- VerificationActivity -->
        <activity
            android:name=".ui.VerificationActivity"
            android:exported="true" />

        <!-- ProfileCreationActivity -->
        <activity
            android:name=".ui.ProfileCreationActivity"
            android:exported="true" />

        <!-- MatchmakingActivity -->
        <activity
            android:name=".MatchmakingActivity"
            android:exported="true" />

        <!-- ConnectionTypeSelectionActivity -->
        <activity
            android:name=".ConnectionTypeSelectionActivity"
            android:exported="true" />

    </application>
</manifest>
